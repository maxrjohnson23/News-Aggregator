<header class="header">
    <h1 id="">Saved Articles</h1>
    <nav class="button-group">
        <a href="/">
            <button class="button-dark">Home</button>
        </a>
    </nav>
</header>
<div class="filler"></div>

{{!-- #each to iterate through articles and create article panels --}}
{{#each articles}}
    <article class="card m-3 p-2">
        <div class="row no-gutters">
            <figure class="col-auto">
                <img src="{{imageUrl}}" class="img-fluid" alt="Article Image">
            </figure>
            <div class="col">
                <div class="card-block p-2">
                    <a href="{{link}}"><h4 class="card-title">{{title}}</h4></a>
                    <p class="card-text">{{summary}}</p>
                    <button class="saveArticle btn btn-danger float-right mr-3" data-id="{{_id}}"
                            data-saved="true">Remove Saved
                    </button>
                    <button class="addNote btn btn-secondary float-right mr-3" data-id="{{_id}}">
                        Article Notes
                    </button>
                </div>
            </div>
        </div>
    </article>
{{else}}
    <h1>No saved articles</h1>
{{/each}}

{{!-- modal for displaying and creating notes --}}
<div id="noteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Article Notes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group note-container">
                    <li class="list-group-item note">test
                        <button class="btn btn-danger note-delete">x</button>
                    </li>
                </ul>
                <textarea placeholder="New Note" rows="4" cols="50"></textarea>
                <button class="btn btn-success save">Save</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{{!-- error modal --}}
<div id="error" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h2>There was an error processing your request. Please try again later.</h2>
            </div>
        </div>
    </div>
</div>