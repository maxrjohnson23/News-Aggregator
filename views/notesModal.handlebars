<div id="noteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Article Notes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group note-container">
                    <li class="list-group-item note">{{title}}-{{body}}
                        <button class="btn btn-danger noteDelete" data-note-id="{{_id}}">x</button>
                    </li>
                </ul>
                <textarea placeholder="New Note" rows="4" cols="50"></textarea>
                <button class="btn btn-success save" data-article-id="{{articleId}}">Save</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>