<header class="header">
    <h1 id="">Articles</h1>
    <nav class="button-group">
        <button class="button-dark" id="scrape" data-toggle="modal" data-target="#alertModal">
            Retrieve New Articles
        </button>
        <a href="/savedArticles">
            <button class="button-dark" id="viewSaved">My Saved Articles</button>
        </a>
    </nav>
</header>
<div class="filler"></div>

{{#each articles}}
    <article class="card m-3 p-2">
        <div class="row no-gutters">
            <figure class="col-auto">
                <img src="{{imageUrl}}" class="img-fluid" alt="Article Image">
            </figure>
            <div class="col">
                <div class="card-block p-2">
                    <a href="{{link}}"><h4 class="card-title">{{title}}</h4></a>
                    <p class="card-text">{{summary}}</p>
                    {{#if saved}}
                        <a href="#" class="saveArticle btn btn-danger float-right mr-3"
                           data-id="{{_id}}" data-saved="true">Remove Saved</a>
                    {{ else }}
                        <a href="#" class="saveArticle btn btn-primary float-right mr-3"
                           data-id="{{_id}}" data-saved="false">Save</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </article>
{{/each}}

{{!-- Modal for alerting number of scraped articles --}}
<div id="alertModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-center">
                <h2>You have scraped <span id="numArticles"></span> new articles</h2>
            </div>
        </div>
    </div>
</div>

{{!-- error modal --}}
<div id="error" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h2>There was an error processing your request. Please try again later.</h2>
            </div>
        </div>
    </div>
</div>